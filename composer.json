{
    "name": "aura/session",
    "type": "library",
    "description": "Provides session management functionality, including session segments, read-once (flash) values, CSRF tools, and lazy session starting.",
    "keywords": [
        "session",
        "sessions",
        "flash",
        "flash message",
        "csrf"
    ],
    "homepage": "http://auraphp.github.com/Aura.Session",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Aura.Session Contributors",
            "homepage": "https://github.com/auraphp/Aura.Session/contributors"
        }
    ],
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*",
        "squizlabs/php_codesniffer": "1.5.*"
    },
    "suggest": {
        "ext-openssl": "OpenSSL generates the best secure CSRF tokens.",
        "ext-mcrypt": "Mcrypt generates the next best secure CSRF tokens."
    },
    "autoload": {
        "psr-4": {
            "Aura\\Session\\": "src/"
        }
    },
    "extra": {
        "aura": {
            "type": "library"
        },
        "branch-alias": {
            "dev-develop-2": "2.0.x-dev"
        }
    }
}
